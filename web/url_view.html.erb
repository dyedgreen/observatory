<% else %>
  <%= render "partials/empty.html.erb".to_sym, locals: { :message => "No recorded hits for <i>#{url.target}</i>." } %>
<% end %>

<h3>Details</h3>
<p><strong>Target:</strong> <%= url.target %></p>
<p><strong>Public Id:</strong> <%= url.public_id %></p>
<p><strong>Created:</strong> <%= url.created.to_s.sub " +0000", "" %></p>

<h3>Actions</h3>
<a href="/r/<%= url.public_id %>" class="button grey" target="_blank">Visit</a>
<a href='/url/<%= url.public_id %>/delete' class='button red'>Delete</a>